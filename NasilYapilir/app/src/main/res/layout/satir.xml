<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/relative_layout_background"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/imgUrunResim"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:foregroundGravity="center"
    />

    <TextView
        android:id="@+id/txtUrunlerimBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="153dp"
        android:fontFamily="sans-serif-thin"
        android:text="Ürün"
        android:textColor="#747474"
        android:textSize="19dp" />


    <TextView
        android:id="@+id/satirTextkategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="180dp"
        android:fontFamily="sans-serif-thin"
        android:text="1 TL"
        android:textColor="#747474"
        android:textSize="14dp" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/satirTextkategori"
        android:layout_below="@+id/satirTextkategori"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/cizgiu" />

    <ImageView
        android:id="@+id/imgKalp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="210dp"
        app:srcCompat="@drawable/kalp" />

    <TextView
        android:id="@+id/txtBegeniSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="209dp"
        android:text="7" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="210dp"
        app:srcCompat="@drawable/cizgik" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="210dp"
        app:srcCompat="@drawable/yorum" />

    <TextView
        android:id="@+id/txtyorumSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="208dp"
        android:layout_marginStart="123dp"
        android:text="2" />

    <Button
        android:id="@+id/btnSatinAl"
        android:layout_width="0dp"
        android:layout_height="0dp"
       />

</RelativeLayout>

